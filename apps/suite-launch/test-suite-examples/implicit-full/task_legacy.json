{
    "family": "{{{test_name}}}",
    "executionRoleArn": "arn:aws:iam::826489191740:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::826489191740:role/FirelensECS",
    "networkMode": "bridge",
    "containerDefinitions": [
      {
        "name": "fluent-bit",
        "image": "{{{image-aws-for-fluent-bit}}}",
        "cpu": 512,
        "firelensConfiguration": {
          "type": "fluentbit"
        },
        "environmentFiles": [
          {
              "value": "{{{s3_materials_arn}}}/fluent-bit.env",
              "type": "s3"
          }
        ],
        "environment": [
          {
            "name": "AWS_REGION",
            "value": "us-west-2"
          },
          {
            "name": "aws_fluent_bit_init_s3_1",
            "value": "{{{s3_materials_arn}}}/fluent-bit.conf"
          }
        ],
        "memory": 512,
        "essential": true,
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "app-{{{test_name}}}",
            "awslogs-region": "us-west-2",
            "awslogs-create-group": "true",
            "awslogs-stream-prefix": "fluent-bit"
          }
        }
      },
      {
        "name": "datajet",
        "image": "{{{image-datajet}}}",
        "essential": true,
        "environment": [
          {
            "name": "CLIENTS",
            "value": "[\"s3\"]"
          },
          {
              "name": "CLIENT_S3_BUCKET",
              "value": "firelens-datajet"
          },
          {
            "name": "CLIENT_S3_FILE",
            "value": "{{{s3_materials_key_base}}}/firelens-datajet.json"
          }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
            "awslogs-group": "app-{{{test_name}}}",
            "awslogs-region": "us-west-2",
            "awslogs-create-group": "true",
            "awslogs-stream-prefix": "datajet"
            }
        },
        "dependsOn": [{
            "containerName": "fluent-bit",
            "condition": "START"
        }],
        "links": ["fluent-bit:flb"]
      },
      {
        "essential": false,
        "image": "httpd",
        "name": "dummy",
        "logConfiguration": {
          "logDriver":"awsfirelens",
          "options": {
            "Name": "cloudwatch_logs",
            "region": "us-west-2",
            "log_group_name": "/aws/ecs/containerinsights/dummy-app",
            "auto_create_group": "true",
            "log_stream_name": "stdout-stderr-",
            "retry_limit": "2"
          }
        },
        "memoryReservation": 100
      }
    ],
    "memory": "512",
    "cpu": "512"
}